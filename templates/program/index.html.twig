{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}
    <h1 class="text-center">Voici la liste des programmes</h1>

    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button>Search</button>
    {{ form_end(form) }}
    

    <div class="card-flex">
        {% for program in programs %}
        <div class="card-corp" style="width: 18rem;">
            <ul class="list-group">
                <li class="list-group font text-center fw-bold mb-2 mt-2">Catégorie : {{ program.category.name }}</li>
            </ul>
            <img class="card-img-top" src="{{program.poster}}" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title font">{{ program.title }}</h5>
                <hr>
                <p class="card-text font">{{program.synopsis|u.truncate(100, '...', false)}}</p>
                <a class="btn btn-primary" href="{{ path("program_show", { slug: program.slug }) }}">Voir la fiche</a>
            </div>
        </div>
        {% else %}
            Aucune série trouvée.
        {% endfor %}
    </div>

    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}